<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PracticePanther.MAUI.Controls"
             xmlns:c="clr-namespace:PracticePanther.MAUI.Controls"
             x:Class="PracticePanther.MAUI.Views.ProjectView"
             Title="ProjectView"
             NavigatedTo="OnArriving">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Path=Client.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <ListView
            ItemsSource="{Binding Projects}"
            >
            
        </ListView>
        <Button Text="Go Back" Clicked="GoBackClicked"/>
    </VerticalStackLayout>
</ContentPage>